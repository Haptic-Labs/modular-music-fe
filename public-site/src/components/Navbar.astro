---
import type { HTMLAttributes } from 'astro/types';
import Wordmark from './Wordmark.astro';

interface Props extends HTMLAttributes<'nav'> {}
---

<style>
  nav {
    width: 100%;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: var(--darkerGray);
  }
  .wordmark-container {
    height: 40px;
  }
</style>
<nav>
  <!-- TODO: add link when we have other pages -->
  <figure class='wordmark-container'>
    <Wordmark />
  </figure>
  <slot />
</nav>
